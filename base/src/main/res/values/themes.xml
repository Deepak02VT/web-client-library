<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--EditText default theme-->
    <style name="Widget.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/proxima</item>
        <item name="fontFamily">@font/proxima</item>
    </style>
    <!--Button default theme-->
    <style name="Widget.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/proxima</item>
        <item name="fontFamily">@font/proxima</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!--TextView default theme-->
    <style name="Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/proxima</item>
        <item name="fontFamily">@font/proxima</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!--Checkbox default theme-->
    <style name="Widget.Checkbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/proxima</item>
        <item name="fontFamily">@font/proxima</item>
    </style>
    <!---->
    <style name="Widget.TextView.Heading" parent="Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.TextView.SubHeading" parent="Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Loader Dialog theme-->
    <style name="LoaderDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
