<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/dialog_background"
    app:cardCornerRadius="@dimen/dp_14">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.vtnra.ui.widget.BaseTextView
            android:id="@+id/dialog_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:textAlignment="center"
            android:textStyle="bold"
            android:theme="@style/Widget.TextView.Heading" />

        <com.vtnra.ui.widget.BaseTextView
            android:id="@+id/dialog_sub_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:theme="@style/Widget.TextView.SubHeading" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/separator"
            android:backgroundTint="@color/dialog_separator" />

        <com.vtnra.ui.widget.BaseTextView
            android:id="@+id/dialog_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:text="@android:string/ok"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:theme="@style/Widget.TextView.Heading" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
